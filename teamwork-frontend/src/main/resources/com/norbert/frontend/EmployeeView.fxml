<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="450" prefWidth="850" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.norbert.frontend.controller.EmployeeController">

    <children>
        <TableView id="tableView" fx:id="tableView" prefHeight="400" prefWidth="850">
            <columns>
                <TableColumn fx:id="id" prefWidth="100" reorderable="false" resizable="false" styleClass="centered" text="Id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="firstName" prefWidth="100" reorderable="false" resizable="false" sortable="false" styleClass="centered" text="First name">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="lastName" prefWidth="100" reorderable="false" resizable="false" sortable="false" styleClass="centered" text="Last name">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="email" prefWidth="300" reorderable="false" resizable="false" sortable="false" styleClass="centered" text="Email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="card" prefWidth="150" reorderable="false" resizable="false" styleClass="centered" text="Card number">
                    <cellValueFactory>
                        <PropertyValueFactory property="cardNumber" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="working" prefWidth="100" reorderable="false" resizable="false" styleClass="centered" text="Is working">
                    <cellValueFactory>
                        <PropertyValueFactory property="working" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditAction" text="Edit" />
                        <MenuItem onAction="#handleToggleWorkingStatusAction" text="Hire/Dismiss" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <VBox alignment="CENTER" GridPane.rowIndex="1" GridPane.rowSpan="2" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="50">
               <Button id="addEmployeeButton" fx:id="addEmployeeButton" prefHeight="30" prefWidth="150" text="Add Employee" />
                <Button id="refreshButton" fx:id="refreshButton" prefHeight="30" prefWidth="150" text="Refresh" />
            </HBox>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
        </VBox>
    </children>




    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
