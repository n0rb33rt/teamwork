<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import java.net.URL?>
<GridPane prefHeight="400" prefWidth="1040"
          xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.norbert.frontend.controller.PayrollTransactionStatisticsController">

    <children>
        <TableView id="tableView" fx:id="tableView" prefHeight="400" prefWidth="1040">
            <columns>
                <TableColumn fx:id="id" resizable="false" text="Id" styleClass="centered" reorderable="false" prefWidth="135">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="employee" resizable="false" text="Employee" styleClass="centered" reorderable="false" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="employee"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="employees" resizable="false" text="Working employees"  sortable="false" styleClass="centered" reorderable="false" prefWidth="350">
                    <cellValueFactory>
                        <PropertyValueFactory property="employees"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="orderType" resizable="false" text="Order type" sortable="false" styleClass="centered" reorderable="false" prefWidth="180">
                    <cellValueFactory>
                        <PropertyValueFactory property="orderType"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="price" resizable="false" text="Price" sortable="false" styleClass="centered" reorderable="false" prefWidth="90">
                    <cellValueFactory>
                        <PropertyValueFactory property="price"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="date" resizable="false" text="Date" styleClass="centered" reorderable="false" prefWidth="135">
                    <cellValueFactory>
                        <PropertyValueFactory property="date"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</GridPane>
