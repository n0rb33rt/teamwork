<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="500" prefWidth="900" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.norbert.frontend.controller.TransactionController">

    <children>
        <TableView id="tableView" fx:id="tableView" prefHeight="425" prefWidth="900">
            <columns>
                <TableColumn fx:id="id" prefWidth="135" reorderable="false" resizable="false" styleClass="centered" text="Id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="employees" prefWidth="360" reorderable="false" resizable="false" sortable="false" styleClass="centered" text="Employees">
                    <cellValueFactory>
                        <PropertyValueFactory property="employees" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="orderType" prefWidth="180" reorderable="false" resizable="false" sortable="false" styleClass="centered" text="Order type">
                    <cellValueFactory>
                        <PropertyValueFactory property="orderType" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="price" prefWidth="90" reorderable="false" resizable="false" sortable="false" styleClass="centered" text="Price">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="date" prefWidth="135" reorderable="false" resizable="false" styleClass="centered" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditAction" text="Edit" />
                        <MenuItem onAction="#handleDeleteAction" text="Delete" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <VBox alignment="CENTER" GridPane.rowIndex="1" GridPane.rowSpan="2" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="25">
                <Button id="addTransactionButton" fx:id="addTransactionButton" onAction="#handleAddTransactionButtonAction" prefHeight="50" prefWidth="150" text="Add Transaction" />
                <Button id="employeesButton" fx:id="employeesButton" onAction="#handleEmployeesButtonAction" prefHeight="50" prefWidth="150" text="Employees" />
                <Button id="refreshButton" fx:id="refreshButton" onAction="#handleRefreshButtonAction" prefHeight="50" prefWidth="150" text="Refresh" />
                <Button id="paySalaryButton" fx:id="paySalaryButton" onAction="#handlePaySalaryButtonAction" prefHeight="50" prefWidth="150" text="Pay Salary" />
            </HBox>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </VBox>
    </children>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</GridPane>
